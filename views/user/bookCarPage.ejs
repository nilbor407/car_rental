<%- include("navbar.ejs")%>

    <div class="container mb-5">

        <div class="row d-flex justify-content-center">
            <div class=" col-md-6 ">
                <div class="car">
                    <div class="splide splide--card car__slider">
                        <div class="splide__arrows">
                            <button class="splide__arrow splide__arrow--prev" type="button"><svg
                                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path
                                        d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z">
                                    </path>
                                </svg></button>
                            <button class="splide__arrow splide__arrow--next" type="button"><svg
                                    xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                    <path
                                        d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z">
                                    </path>
                                </svg></button>
                        </div>

                        <div class="splide__track">
                            <ul class="splide__list">
                                <li class="splide__slide">
                                    <img src="/encoded_files/<%=booking_data[0].car_image%>" alt=""
                                        style="height:100%;">
                                </li>

                            </ul>
                        </div>
                    </div>
                    <div class="car__title">
                        <h3 class="car__name"><a href="#">
                                <%=booking_data[0].car_name%>
                            </a></h3>

                    </div>
                    <ul class="car__list">
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path
                                    d="M12.3,12.22A4.92,4.92,0,0,0,14,8.5a5,5,0,0,0-10,0,4.92,4.92,0,0,0,1.7,3.72A8,8,0,0,0,1,19.5a1,1,0,0,0,2,0,6,6,0,0,1,12,0,1,1,0,0,0,2,0A8,8,0,0,0,12.3,12.22ZM9,11.5a3,3,0,1,1,3-3A3,3,0,0,1,9,11.5Zm9.74.32A5,5,0,0,0,15,3.5a1,1,0,0,0,0,2,3,3,0,0,1,3,3,3,3,0,0,1-1.5,2.59,1,1,0,0,0-.5.84,1,1,0,0,0,.45.86l.39.26.13.07a7,7,0,0,1,4,6.38,1,1,0,0,0,2,0A9,9,0,0,0,18.74,11.82Z" />
                            </svg>
                            <span>
                                <%=booking_data[0].how_many_seats%>
                            </span>
                        </li>
                        <li>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path
                                    d="M20.54,6.29,19,4.75,17.59,3.34a1,1,0,0,0-1.42,1.42l1,1-.83,2.49a3,3,0,0,0,.73,3.07l2.95,3V19a1,1,0,0,1-2,0V17a3,3,0,0,0-3-3H14V5a3,3,0,0,0-3-3H5A3,3,0,0,0,2,5V19a3,3,0,0,0,3,3h6a3,3,0,0,0,3-3V16h1a1,1,0,0,1,1,1v2a3,3,0,0,0,6,0V9.83A5,5,0,0,0,20.54,6.29ZM12,19a1,1,0,0,1-1,1H5a1,1,0,0,1-1-1V12h8Zm0-9H4V5A1,1,0,0,1,5,4h6a1,1,0,0,1,1,1Zm8,1.42L18.46,9.88a1,1,0,0,1-.24-1l.51-1.54.39.4A3,3,0,0,1,20,9.83Z" />
                            </svg>
                            <span>
                                <%=booking_data[0].engine_type%>
                            </span>
                        </li>

                    </ul>


                    <div class="car__footer ">
                        <div class="row">
                            <div class="col-md-12">
                                <input type="hidden" name="car_id" value="<%=booking_data[0].tariffs_id%>">
                                <input type="hidden" id="car_rent" name="car_rent"
                                    value="<%=booking_data[0].peakHours%>">
                            </div>
                            <div class="col-md-12  p-0 mt-3  text-center ">
                                <h1 class="text-dark">&#8377;<%=booking_data[0].peakHours%>/KM</h1>
                            </div>
                        </div>            




                    </div>
                </div>
            </div>
            <div class="col-md-6 d-flex align-items-center car">
                <form class="" action="/booked_car" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-12 p-3">
                            <h1 class="text-center text-white font-weight-bold">
                                Booked This Car
                            </h1>
                        </div>
                        <div class="col-md-12">
                            <label for="">Name</label>
                            <input type="text" placeholder="Enter Your Name" class="form-control"  id="nameInput" required name="customer_name"
                                id="">
                            <input type="hidden" placeholder="Enter Your Name" class="form-control "
                                value="<%=booking_data[0].car_name%>" name="car_name" id="">
                            <input type="hidden" placeholder="Enter Your Name" class="form-control"
                                value="<%=booking_data[0].tariffs_id%>" name="car_id" id="">
                        </div>
                        <div class="col-md-12">
                            <label for="" class="mt-2 text-dark">Mobile</label>
                            <!-- <input type="number" placeholder="Enter Your Mobile" class="form-control"
                                name="customer_mobile" id=""> -->
                          <input type="text" id="numberInput" placeholder="Enter valid mo Number" name="customer_mobile" class="form-control" pattern="[0-9]{10}" required>
                        </div>
                        <div class="col-md-6">
                            <label for="" class="mt-2 text-dark">From</label>
                            <input type="text" placeholder="pick up place" class="form-control" required name="pick_place" id="">
                        </div>
                        <div class="col-md-6">
                            <label for="" class="mt-2 text-dark">Destination</label>
                            <input type="text" placeholder="drop up place" class="form-control" required name="drop_place" id="">
                        </div>
                        <div class="col-md-6">
                            <label for="" class="mt-2 text-dark">Date </label>
                            <input type="date" class="form-control" name="pick_date" required id="">
                        </div>
                        <div class="col-md-6">
                            <label for="" class="mt-2 text-dark">Time </label>
                            <input type="time" class="form-control" name="pick_time" required id="">
                        </div>
                        <div class="col-md-12 text-center mt-3">
                            <button class="btn btn-dark   btn-lg w-100"
                                onclick="return confirm('Are You Sure')">Booked</button>
                        </div>


                    </div>
                </form>

            </div>
        </div>
        <script>
            document.getElementById("numberForm").addEventListener("submit", function(event) {
                event.preventDefault();
                let number = document.getElementById("numberInput").value;
                if (/^\d{10}$/.test(number)) {
                    alert("You entered: " + number);
                } else {
                    alert("Please enter a valid 10-digit number.");
                }
            });
            </script>
            

    </div>
    <!-- end home -->

    <%- include("footer.ejs")%>
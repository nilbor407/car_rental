<%- include("navbar.ejs")%>

    <style>
        body {
            margin: 0px;
            padding: 0px;
            background-color: #9dfce918;
        }

        .back_img {
            background-image: url(about_images/about_background.webp);
            background-repeat: no-repeat;
            background-size: cover;
            object-fit: cover;
            background-position: center;
            height: 690px;
        }

        .back_img h5 {
            margin-top: 15%;
            color: white;
            font-style: italic;
            font-size: 30px;
            font-weight: bold;
            margin-left: 10%;
        }

        .back_img h3 {
            /* margin-top: 31%; */
            color: black;
            font-style: italic;
            font-size: 50px;
            font-weight: bold;
            margin-left: 10%;
            text-transform: capitalize;
            font-feature-settings: "abvf";
        }

        .about_background {
            background-image: url(about_images/main_bg.jpg);
            background-position: center;
            object-fit: cover;
            background-repeat: no-repeat;
            background-size: cover;
            height: 500px;
        }

        .slide_images {
            height: 700px;
        }

        @media(max-width:667px) {
            .back_img {
                background-image: url(about_images/about_background.webp);
                background-repeat: no-repeat;
                background-size: cover;
                object-fit: cover;
                background-position: center;
                height: 360px;
            }

            .back_img h5 {
                margin-top: 20%;
                color: white;
                font-style: italic;
                font-size: 20px;
                font-weight: bold;
                margin-left: 10%;
            }

            .back_img h3 {
                color: black;
                font-style: italic;
                font-size: 22px;
                font-weight: bold;
                margin-left: 10%;
                text-transform: capitalize;
                font-feature-settings: "abvf";
            }

            .about_background {
                background-image: url(about_images/main_bg.jpg);
                background-position: center;
                object-fit: cover;
                background-repeat: no-repeat;
                background-size: cover;
                height: auto;
            }

            .about_background div {
                margin-top: 8%;
                margin-bottom: 0px;
            }

            .slide_images {
                height: 300px;
            }
        }
    </style>
    </head>

    <body>

        <div class="container">
            <div class="row">
                <div class="col-md-12 back_img" data-aos="zoom-in">
                    <h5 class="text-center"><%=about_story[0].about_story_title1%></h5>
                    <h3 class="text-center"><%=about_story[0].about_story_title2%></h3>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row ">
                <div class="col-md-12 mb-4 shadow bg-white p-5" data-aos="zoom-in">
                    <h2 class="font-weight-bold text-info"><%=who_we_are[0].who_we_are_title%></h2>
                    <p class="text-justify mb-5 mt-3"><%=who_we_are[0].who_we_are_desc%></p>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row mb-5">
                <div class="col-md-12 mb-5 p-0" data-aos="zoom-in">
                    <img src="/about_images/customer_back.webp" class="w-100" alt="">
                </div>
                <div class="col-xl-7 col-lg-12 col-md-12 mb-4" data-aos="zoom-in">
                    <h1 class="font-weight-bold"><%=about_performance[0].about_performance_title%></h1>
                    <p class="text-justify mt-4 pr-5"><%=about_performance[0].about_performance_desc%></p>
                </div>
                <div class="col-xl-5 col-lg-12 col-md-12 p-0" data-aos="zoom-in">
                    <img src="/encoded_files/<%=about_performance[0].about_performance_image1%>" class="w-100" alt="">
                </div>
                <div class="col-xl-7 col-lg-12 col-md-12 p-0 p-0" data-aos="zoom-in">
                    <img src="/encoded_files/<%=about_performance[0].about_performance_image2%>" class="w-100" alt="">
                </div>
                <div class="col-xl-5 col-lg-12 col-md-12 p-0" data-aos="zoom-in">
                    <img src="/encoded_files/<%=about_performance[0].about_performance_image3%>" class="w-100 p-0" alt="">
                </div>
            </div>
        </div>

        <!-- =========================================================== -->

        <% for(var i=0;i<car_safety.length;i++){%>
        <div class="container">
            <div class="row">
                <div class="col-xl-7 col-lg-12 col-md-12 mb-5" data-aos="zoom-in">
                    <h1 class="font-weight-bold"><%=car_safety[i].car_safety_title%></h1>
                    <p class="text-justify mt-4 pr-5"><%=car_safety[i].car_safety_desc%></p>
                </div>
                <div class="col-xl-5 col-lg-12 col-md-12 p-0" data-aos="zoom-in">
                    <img src="/encoded_files/<%=car_safety[i].car_safety_image1%>" class="w-100" alt="">
                </div>
                <div class="col-xl-7 col-lg-12 col-md-12 p-0" data-aos="zoom-in">
                    <img src="/encoded_files/<%=car_safety[i].car_safety_image2%>" class="w-100" alt="">
                </div>
                <div class="col-xl-5 col-lg-12 col-md-12 p-0" data-aos="zoom-in">
                    <img src="/encoded_files/<%=car_safety[i].car_safety_image3%>" class="w-100 p-0" alt="">
                </div>
            </div>
        </div>
        <%}%>

        <!-- ========================================================= -->


        <% for(var i=0;i<our_office.length;i++){%>
        <div class="container mt-2 about_background"> <br><br><br><br>
            <div class="row">
                <div class="col-md-1"></div>

                <div class="col-xl-4 col-lg-4 col-md-6 mt-5 p-4 shadow border bg-light w-100">
                    <h1 class="font-weight-bold"><%=our_office[i].our_office_title%></h1>
                    <p class="text-justify mt-3 font-weight-bold"><%=our_office[i].our_office_desc%></p>
                    <p class="text-justify mt-3 font-weight-bold" s><%=our_office[i].our_office_address%>
                </div>
            </div>
        </div>
        <%}%>
        <!-- aos animation script -->

        <script>
            AOS.init({
                duration: 1200,
            });

        </script>

        <%- include("footer.ejs")%>
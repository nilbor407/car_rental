<%- include("navbar.ejs")%>

<form action="/admin/save_our_office" method="post" enctype="multipart/form-data">
    <div class="container bg-white p-5">
        <div class="row">
            <div class="col-md-12">
                <h1>Add Office Details</h1>
            </div>
            <div class="col-md-6">
                <label for="">Title</label>
                <input type="text" class="form-control" value="<%=our_office[0].our_office_title%>" name="our_office_title">
            </div>
            <div class="col-md-6">
                <label for="">Description</label>
                <input type="text" class="form-control" value="<%=our_office[0].our_office_desc%>" name="our_office_desc">
            </div>
            <div class="col-md-12">
                <label for="">Address</label>
                <textarea name="our_office_address" class="form-control" id="" cols="30" rows="2">
                    <%=our_office[0].our_office_address%>
                </textarea>
            </div>
            <div class="col-md-12 mt-5 text-center">
                <button class="btn" style="background-color: rgba(26, 188, 156, 1);">Submit</button>
            </div>
        </div>
    </div>
</form>

<style>
    @media(min-width:344px){
        table{
            overflow: scroll;
        }
    }
</style>
